<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DarkAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/underline</item>
        <item name="tabIndicator">@drawable/underline</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabPaddingStart">19dp</item>
        <item name="tabPaddingEnd">19dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabTextColor">#868584</item>
        <item name="tabSelectedTextColor">#ED7F2C</item>
    </style>
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingLeft">19dp</item>
    </style>


    <style name="NavigationTheme">
        <item name="android:textSize">12sp</item>
        <item name="iconSize">35px</item>
        <item name="itemTextColor">@color/item_text_color</item>
        <item name="itemIconTint">@color/item_icon_color</item>
    </style>

    <style name="ActionBarItemTheme">
        <item name="iconSize">35px</item>
        <item name="itemIconTint">@color/item_icon_color</item>
    </style>

    <style name="TextInputLayoutTheme" parent="Widget.Design.TextInputLayout">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">1px</item>
        <item name="colorControlNormal">#99B4B3B3</item>
        <item name="android:textColorPrimary">#4F504F</item>
        <item name="android:imeOptions">flagNoFullscreen</item>
    </style>

    <style name="HintText" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#9F9F9F</item>
    </style>

    <style name="ErrorText" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#D50000</item>
        <item name="colorControlNormal">#B4B3B3</item>
    </style>
    <style
        name="fontstyle1"
        parent="@style/Text">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#4F504F</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="fontstyle2"
        parent="@style/Text">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#DE3A3939</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/date_picker_accent</item>

        <!-- No need to override 'datePickerStyle' -->
        <!-- <item name="android:datePickerStyle">@style/MyDatePickerStyle</item> -->
    </style>

    <style name="RatingBar1" parent="@style/Widget.AppCompat.RatingBar.Small">
        <item name="android:progressTint">@color/star_activated_state</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:minWidth">15dp</item>

    </style>


        <style name="dealerRatingBar" parent="@android:style/Widget.RatingBar">
            <item name="android:progressDrawable">@drawable/custom_rating_bar</item>
            <item name="android:minHeight">15dp</item>
            <item name="android:maxHeight">15dp</item>
            <item name="paddingStart">2dp</item>
            <item name="paddingEnd">2dp</item>
        </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/gray1</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>

    <style name="Text"></style>

    <style name="Theme.AppCompat.Transparent.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>
