<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="13dp"
    app:cardBackgroundColor="@color/white"
    android:id="@+id/card_view">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroundmilestone">

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="270dp"
            android:layout_marginTop="17dp"
            android:src="@drawable/close" />

        <TextView
            android:id="@+id/milestoneTextView"
            android:layout_width="90dp"
            android:layout_height="22dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="17dp"
            android:text="Milestone 1"
            android:textColor="#EA4F504F"
            android:textSize="16sp" />

        <TextView
            android:layout_width="278dp"
            android:layout_height="28dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="43dp"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="@string/this_is_to_make_a_break_journey_in_between_your_trip"
            android:textColor="#EADB3E3E"
            android:textSize="11sp" />

        <EditText
            android:id="@+id/sourceCardview"
            android:layout_width="285dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="76dp"
            android:gravity="center_vertical"
            android:hint="From"
            android:background="@null"
            android:textColor="#EA4F504F"
            android:textColorHint="#EA4F504F"
            android:textSize="16sp" />

        <View
            android:layout_width="285dp"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="100dp"
            android:background="#B4B3B3" />

        <RelativeLayout
            android:id="@+id/linearlayout2"
            android:layout_width="285dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="106dp"

            android:background="@drawable/shadow"
            android:orientation="vertical">

            <TextView
                android:id="@+id/currentLocationTextView"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="72dp"
                android:fontFamily="sans-serif"
                android:gravity="top"
                android:textColor="#717171"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/currentlocation2"
                android:layout_width="160dp"
                android:layout_height="16dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="72dp"
                android:layout_marginBottom="5dp"
                android:text="@string/current_location"
                android:textColor="#EAB6B6B6"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="14dp"
                android:src="@drawable/gpsfixedindicator" />
        </RelativeLayout>

        <EditText
            android:id="@+id/destinationCardview"
            android:layout_width="183dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="182dp"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:hint="To"
            android:background="@null"
            android:textColor="#EA4F504F"
            android:textColorHint="#EA4F504F"
            android:textSize="16sp" />

        <View
            android:layout_width="285dp"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="207dp"
            android:background="#B4B3B3" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>
